{
  "mime_file": "mime.json",
  "servers": [
    {
      "listen": ["0.0.0.0", 80],
      "server_names": ["localhost"],
      "routes": {
        "/": {
          "root": "html",
          "index": ["index.html"],
          "autoindex": true,
          "methods": ["GET"]
        },
        "/cgi/form": {
          "root": "html/cgi/form/",
          "methods": ["POST"],
          "cgi": {
            ".py": "cgi-bin/python-cgi"
          }
        },
        "/redir": {
          "root": "html",
          "methods": ["GET"],
          "redir": "http://noboardchess.org"
        }
      }
    },
    {
      "listen": ["0.0.0.0", 5000],
      "routes": {
        "/": {
          "root": "html/upload",
          "methods": ["GET", "DELETE", "PUT"],
          "autoindex": true
        }
      }
    },
    {
      "listen": ["0.0.0.0", 4000],
      "routes": {
        "/": {
          "root": "html/cgi",
          "methods": ["GET"],
          "autoindex": true,
          "cgi": {
            ".py": "cgi-bin/python-cgi",
            ".sh": "cgi-bin/bash-cgi",
            ".php": "/usr/bin/php-cgi"
          }
        },
        "/form": {
          "root": "html/cgi/form",
          "methods": ["POST"]
        }
      }
    }
  ]
}
