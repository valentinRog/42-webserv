{
  "mime_file": "mime.json",
  "servers": [
    {
      "client_max_body_size": 80,
      "listen": ["0.0.0.0", 80],
      "names": ["localhost"],
      "routes": {
        "/": {
          "root": "html",
          "index": ["index.html"],
          "methods": ["GET"]
        },
        "/cgi/form": {
          "root": "html/cgi/form/",
          "methods": ["POST"],
          "cgi": {
            ".py": "cgi-bin/python-cgi"
          }
        },
        "/upload": {
          "root": "html/upload",
          "methods": ["GET", "DELETE"],
          "autoindex": true
        },
        "/hello": {
          "root": "html/cgi/hello/",
          "autoindex": true,
          "methods": ["GET"],
          "cgi": {
            ".py": "cgi-bin/python-cgi",
            ".php": "/usr/bin/php-cgi",
            ".sh": "cgi-bin/bash-cgi"
          }
        },
        "/redir": {
          "root": "html",
          "methods": ["GET"],
          "redir": "http://noboardchess.org"
        }
      }
    }
  ]
}
